
@using EmployeeLinqTest.Models
@model IEnumerable<EmployeeModel>



<div class="container">
    @using(Html.BeginForm("EmployeeSearch","Employee",FormMethod.Get))

    {
        <b> Search by :</b>
        @Html.RadioButton("SearchBy","EmpName",true)<text>NAME </text>
        @Html.RadioButton("SearchBy","EmpGender")<text>Gender </text>
        
        <br />
        @Html.TextBox("search") <input type="submit" value="Search" />

    }
    <table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Gender</th>
       <th scope="col">Father Name</th>
        <th scope="col">Mother Name</th>
         <th scope="col">Salary</th>
    </tr>
  </thead>
  <tbody>
      @if(Model.Count() == 0)
            {
                <tr>
                    <td colspan=7>No Such Data Is Found</td>
                </tr>

            }
        else
            {
            foreach(var emp in Model)
        {
    <tr>
      <th scope="row">@emp.EmpId</th>
      <td>@emp.EmpName</td>
      <td>@emp.EmpAge</td>
      <td>@emp.EmpGender</td>
      <td>@emp.EmpFathername</td>
      <td>@emp.EmpMothername</td>
       <td>@emp.EmpSalary</td>
    </tr>
        }
            }
    </table>
   

</div>

