      @Html.DropDownListFor(m => m.DeptId,
      new SelectList(Enum.GetValues(typeof(Department))), "Select Department")
    </div>

     <div class="form-group">
        <input type="submit" value="Add Student" class="btn btn-primary" />
    </div>

   
  </form>

</div>